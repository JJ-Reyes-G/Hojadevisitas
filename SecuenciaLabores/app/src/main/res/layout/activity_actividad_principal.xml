<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.secuencia.ordenescosecha.ActividadPrincipal" >

    <Button
            android:id="@+id/btn_secuencia_labores"
            style="@style/LetraBlanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="137dp"
            android:background="@drawable/boton_gris"
            android:onClick="btn_secuencia_labores"
            android:text="Secuencia de Labores"
            android:textColor="#FFFFFF" />

    <Button
        android:layout_width="match_parent"
        style="@style/LetraBlanco"
        android:layout_height="wrap_content"
        android:text="Visitas de campo"
        android:id="@+id/btn_secuencia_visitas"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="137dp"
        android:background="@drawable/boton_gris"
        android:onClick="btn_secuencia_visitas"
        android:textColor="#FFFFFF"/>

</RelativeLayout>

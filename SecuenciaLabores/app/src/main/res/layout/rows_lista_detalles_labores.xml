<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
 >

    <TextView
        android:id="@+id/tv_numeroCorrelativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp10"
        android:text="12"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#088A29" />
    
    <TextView
        android:id="@+id/tv_codnom_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_numeroCorrelativo"
        android:layout_alignTop="@+id/tv_numeroCorrelativo"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/tv_numeroCorrelativo"
        android:text="CODNOM PRODUCTO JUAN JOSE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333" />
    
     <TextView
         android:id="@+id/tv_codnom_tipolabor"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/tv_numeroCorrelativo"
         android:layout_below="@+id/tv_codnom_producto"
         android:paddingBottom="@dimen/dp3"
         android:paddingTop="@dimen/dp3"
         android:text="Fertilizante"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#5858FA" />

    <TextView
        android:id="@+id/tv_fecha_aplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_numeroCorrelativo"
        android:layout_below="@+id/tv_codnom_tipolabor"
        android:text="12/10/2015"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/rojo_fuerte" />
    
        <TextView
        android:id="@+id/tv_codigoLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center|clip_horizontal"
        android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_codnom_tipolabor"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:padding="@dimen/dp3"
            android:textAppearance="?android:attr/textAppearanceMedium"     
            android:textStyle="bold"                   
            android:text="556.2" />

        <TextView
            android:id="@+id/tv_tipo_aplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_fecha_aplicacion"
            android:layout_alignBottom="@+id/tv_fecha_aplicacion"
            android:layout_alignRight="@+id/tv_cantidad"
            android:text="Manual" />

        <TextView
            android:id="@+id/tv_unidadmedida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_cantidad"
            android:layout_toLeftOf="@+id/tv_cantidad"
            android:padding="@dimen/dp3"
            android:textAppearance="?android:attr/textAppearanceMedium"            
            android:textColor="#3104B4"
            android:text="LITRO" />

        <TextView
            android:id="@+id/tv_llave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_fecha_aplicacion"
            android:layout_alignBottom="@+id/tv_fecha_aplicacion"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_fecha_aplicacion"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LLAVE: 0" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/tv_fecha_aplicacion"
	        android:layout_marginTop="5dp"
	        android:background="#04B404"
	        android:maxHeight="1dp"
	        android:paddingTop="@dimen/dp5" />

	    <ImageView
	        android:id="@+id/img_candado"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/tv_cantidad"
	        android:layout_alignTop="@+id/tv_codnom_producto"
	        android:src="@drawable/open" />

</RelativeLayout>
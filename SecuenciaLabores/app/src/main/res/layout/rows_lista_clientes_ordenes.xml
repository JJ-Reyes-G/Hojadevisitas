<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >



    <TextView
        android:id="@+id/tv_numeroCorrelativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp10"
        android:text="ORNS 1"
         android:textStyle="bold"        
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#088A29" />
    
    <TextView
        android:id="@+id/tv_codnom_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_numeroCorrelativo"
        android:layout_alignTop="@+id/tv_numeroCorrelativo"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_toRightOf="@+id/tv_numeroCorrelativo"
        android:text="CODNOMFINCA"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />
    
     <TextView
         android:id="@+id/tv_codnom_tipolabor"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/tv_codnom_producto"
         android:layout_below="@+id/tv_codnom_producto"
         android:paddingBottom="@dimen/dp3"
         android:paddingTop="@dimen/dp3"
         android:text="CODNOMLOTE"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#333" />

    <TextView
        android:id="@+id/tv_dosis_desde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_numeroCorrelativo"
        android:layout_below="@+id/tv_codnom_tipolabor"
        android:text="LOTE: 2 - lA CASONA"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"        
        android:textColor="#3104B4" />

    <TextView
        android:id="@+id/tv_numordenes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_numeroCorrelativo"
        android:layout_below="@+id/tv_dosis_desde"
        android:paddingBottom="@dimen/dp3"
        android:paddingTop="@dimen/dp3"
        android:text="N ORDENES: 2"
        android:textAppearance="?android:attr/textAppearanceMedium"        
        android:textColor="#FF0000" />

    <ImageView
        android:id="@+id/iv_candado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgCheck"
        android:layout_toLeftOf="@+id/imgCheck"
        android:layout_marginRight="5dp"
        android:src="@drawable/close" />
    
        <TextView
        android:id="@+id/tv_codigoLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center|clip_horizontal"
        android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_numordenes"
            android:layout_marginRight="24dp"
            android:src="@drawable/ch2" />

        <TextView
            android:id="@+id/tv_secuencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_candado"
            android:layout_alignLeft="@+id/tv_numordenes"
            android:text="5555"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333FFF" />

</RelativeLayout>
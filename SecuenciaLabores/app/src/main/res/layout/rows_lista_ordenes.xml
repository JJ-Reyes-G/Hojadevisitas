<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_codigoLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center|clip_horizontal"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_numeroSecuencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp10"
        android:text="SEC: 500"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/tv_nombreOcacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_codigoLista"
        android:layout_alignLeft="@+id/tv_numeroSecuencia"
        android:layout_below="@+id/tv_numeroSecuencia"
        android:minWidth="180dp"
        android:text="Cod - NomCliente"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0033FF" />

    <TextView
        android:id="@+id/tv_finca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_numeroSecuencia"
        android:layout_below="@+id/tv_numeroSecuencia"
        android:layout_marginTop="60dp"
        android:text="Finca: 2 - Finca 2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333FFF"
        android:visibility="invisible" />
    
	<TextView
	    android:id="@+id/tv_horaquema"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/tv_finca"
	    android:layout_below="@+id/tv_finca"
	    android:layout_marginTop="@dimen/dp15"
	    android:text="Hora Quema: 06:30"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="#0033FF" />

    <TextView
        android:id="@+id/tv_lote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_horaquema"
        android:layout_below="@+id/tv_horaquema"
        android:layout_marginTop="5dp"
        android:text="Lote: 1 - El Lote 1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tv_frente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_lote"
        android:layout_below="@+id/tv_lote"
        android:layout_marginTop="5dp"
        android:text="Frente: 100 - Frente sur"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tv_frenteqnp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_frente"
        android:layout_below="@+id/tv_frente"
        android:layout_marginTop="5dp"
        android:text="FQNP: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tv_diazafra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_frente"
        android:layout_below="@+id/tv_frenteqnp"
        android:layout_marginTop="35dp"
        android:text="DIAZAFRA: 23"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/tv_horaorden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_frente"
        android:layout_below="@+id/tv_diazafra"
        android:layout_marginTop="8dp"
        android:text="HORA: 12:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/tv_corrquema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_frente"
        android:layout_below="@+id/tv_horaorden"
        android:layout_marginTop="8dp"
        android:text="CORRQUEMA: 34"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/tv_llave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_frente"
        android:layout_below="@+id/tv_corrquema"
        android:layout_marginTop="8dp"
        android:text="LLAVE: 0254"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/tv_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_frente"
        android:layout_below="@+id/tv_llave"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginTop="8dp"
        android:text="Comentario: mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tv_tonestima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/dp10"
        android:text="TONESTIMA: 1200"
        android:textColor="#333FFF" />

    <ImageView
        android:id="@+id/imgCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_fhcreacion"
        android:layout_alignTop="@+id/tv_horaorden"
        android:src="@drawable/ch2" />

    <TextView
        android:id="@+id/tv_cantidad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_comentario"
        android:background="#848484"
        android:maxHeight="0dp" />

    <ImageView
        android:id="@+id/iv_candado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgCheck"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/imgCheck"
        android:src="@drawable/close" />

    <TextView
        android:id="@+id/tv_fhcreacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_tipocana"
        android:layout_below="@+id/tv_frenteqnp"
        android:text="Ultima modificacion"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tv_canasobra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_tonestima"
        android:layout_below="@+id/tv_tonestima"
        android:text="Caña (SOBRA): 800"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tv_rosamanana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_canasobra"
        android:layout_below="@+id/tv_canasobra"
        android:text="Rosa (Mañana): 500"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tv_campohoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_rosamanana"
        android:layout_below="@+id/tv_rosamanana"
        android:text="Campo (Hoy): 800"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tv_horasincronizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_fhcreacion"
        android:layout_below="@+id/tv_fhcreacion"
        android:text="Ultima sinc: "
        android:textColor="#0033FF" />

    <TextView
        android:id="@+id/tv_tipocana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_campohoy"
        android:layout_below="@+id/tv_campohoy"
        android:text="Tipo: Quemada"
        android:textColor="#333FFF" />

    

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
   			<solid 
       			android:color="#666666"/>
            <size 
		       android:width="45dip"
		       android:height="45dip"/>   
        </shape>
    </item> 
	<item android:state_focused="true">
        <shape
            android:shape="oval">
            <solid
                android:color="#2E2E2E"/>

            <size 
		       android:width="45dip"
		       android:height="45dip"/>                            
        </shape>
    </item> 
	<item >
        <shape
            android:shape="oval">
            <solid
                android:color="#2E2E2E"/>

            <size 
		       android:width="45dip"
		       android:height="45dip"/>             
                         
        </shape>
    </item>        
</selector>

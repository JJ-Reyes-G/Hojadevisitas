<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.secuencia.ordenescosecha.ActConfiguracion" >

    <CheckBox
        android:id="@+id/cbx_sinc_automatica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="btnSincronizacionAutomatica"
        android:text="Actualizacion Automatica" />

    <Button
        android:id="@+id/btn_cambiar_contrasenia"
        style="@style/LetraBlanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cbx_sinc_automatica"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cbx_sinc_automatica"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_gris"
        android:onClick="btnCambiarContrasenia"
        android:text="Cambiar contraseÃ±a"
        android:textColor="#FFFFFF" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.secuencia.ordenescosecha.DetallesLabores" >

    <TableLayout
        android:id="@+id/tl_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#0404B4"
        android:padding="@dimen/dp5" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp2" >

            <TextView
                android:id="@+id/tv_codnom_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge" 
                android:text="CLIENTE: CODCLIENTE NOMBRE CLIENTE NOMBRE CLIENTE NOMBRE" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp2" >

            <TextView
                android:id="@+id/tv_codnom_finca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="FINCA: COD NOMBRE FINCA"
                android:textColor="#FFFF" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp2" >

            <TextView
                android:id="@+id/tv_codnom_lote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="LOTE: COD NOMBRE DE LOTE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFF"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_codnom_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="FECHA: 15-10-2015"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFF" />

        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/lv_detalles_labores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tl_header"
        android:background="#FFF"
         >
    </ListView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#89cbee"
                android:endColor="#004F81"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#848484" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item> 
	<item android:state_focused="true">
        <shape>
            <solid
                android:color="#2E2E2E"/>
            <stroke
                android:width="1dp"
                android:color="#848484" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />             
        </shape>
    </item> 
	<item >
        <shape>
            <solid
                android:color="#2E2E2E"/>
            <stroke
                android:width="1dp"
                android:color="#848484" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
            
                
        </shape>
    </item>        
</selector>
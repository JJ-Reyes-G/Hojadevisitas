<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp10" >

    <TextView
        android:id="@+id/tv_numeroCorrelativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp10"
        android:text="CORR"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#088A29" />
    
    <TextView
        android:id="@+id/tv_codnom_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_numeroCorrelativo"
        android:layout_alignTop="@+id/tv_numeroCorrelativo"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_toRightOf="@+id/tv_numeroCorrelativo"
        android:text="CODNOM PRODUCTO"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />

</RelativeLayout>